- title("Sign in")

= form_for( resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2.form-signin-heading Please sign in
  .field
    = f.label :email, class: "sr-only"
    %br/
    = f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail",  placeholder: "Email"
  .field
    = f.label :password, class: "sr-only"
    %br/
    = f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "Password"
  .actions
    = f.submit "Log in", class: "btn btn-lg btn-primary btn-block"