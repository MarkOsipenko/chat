- title(current_user.name)

.row.placeholders
  .col-sm-3
    .avatar
      = image_tag(current_user.avatar_url) if current_user.avatar?
    %h4= current_user.name
    %span.text-muted= current_user.email

  .col-sm-6.placeholder
    .my_rooms
      %h4 My rooms
      - current_user.rooms.each do |room|
        .room
          = link_to "#{room.name}", user_room_path(current_user, room)

      = render 'rooms/new_room', user: current_user, room: current_user.rooms.build, action: "Room name", button: "Add room"

  #all_rooms.col-sm-3
    = render 'rooms/rooms', rooms: @all_rooms
